<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/darker_gray"
    android:backgroundTintMode="screen"
    tools:context=".Activities.AddFeedActivity">


    <Button
        android:id="@+id/save_feed_information_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/my_button"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/back_to_CalendarFragment_button"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.189" />

    <Button
        android:id="@+id/back_to_CalendarFragment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/my_button"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.148" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="320dp"
        android:layout_height="271dp"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/feed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorDarkGreen"
            android:ems="10"
            android:hint="@string/feedName"
            android:inputType="textPersonName"
            android:lines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/feed_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorDarkGreen"
            android:ems="10"
            android:hint="@string/feedBrand"
            android:inputType="text"
            android:lines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/feed_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorDarkGreen"
            android:ems="10"
            android:hint="@string/productDescription"
            android:inputType="text" />

        <EditText
            android:id="@+id/feed_composition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorDarkGreen"
            android:ems="10"
            android:hint="@string/feedComposition"
            android:inputType="text" />

        <EditText
            android:id="@+id/feed_recommendation_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorDarkGreen"
            android:ems="10"
            android:hint="@string/feedRecommendationDescription"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/feed_amount"
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorDarkGreen"
                android:ems="10"
                android:hint="@string/feedAmount"
                android:inputType="number"
                android:lines="1"
                android:singleLine="true"
                android:maxLength="2"
                android:digits="0123456789"/>

            <EditText
                android:id="@+id/feed_costs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorDarkGreen"
                android:digits="0123456789."
                android:ems="10"
                android:hint="@string/feedCosts"
                android:inputType="number"
                android:lines="1"
                android:maxLength="5"
                android:singleLine="true" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="320dp"
        android:layout_height="255dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <ListView
            android:id="@+id/ingredients_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="320dp"
        android:layout_height="39dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Spinner
            android:id="@+id/feed_ingredients_spinner"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/feed_ingredients_value"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorDarkGreen"
            android:digits="0123456789.,"
            android:ems="10"
            android:hint="@string/feedIngredientsValue"
            android:inputType="number"
            android:lines="1"
            android:maxLength="7"
            android:singleLine="true" />

        <Spinner
            android:id="@+id/unit_spinner"
            android:layout_width="98dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/add_ingredients_button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/my_button"
            android:text="@string/add" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>