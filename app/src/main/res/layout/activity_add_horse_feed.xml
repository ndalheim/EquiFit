<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.AddHorseFeedActivity">

    <LinearLayout
        android:id="@+id/linearLayoutAddHorseFeed3"
        android:layout_width="390dp"
        android:layout_height="45dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hÃ¤ufigkeit" />
        </LinearLayout>

        <Spinner
            android:id="@+id/numberOfMealsSpinner"
            android:layout_width="87dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/portion" />
        </LinearLayout>

        <EditText
            android:id="@+id/feedInGrammValue"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorDarkGreen"
            android:digits="0123456789"
            android:ems="10"
            android:hint="@string/feed_in_gramm"
            android:inputType="number"
            android:lines="1"
            android:maxLength="7"
            android:singleLine="true" />

       <!-- <Button
            android:id="@+id/addFeedWithGrammButton"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:background="@drawable/my_button"
            android:text="@string/add" /> -->


    </LinearLayout>


